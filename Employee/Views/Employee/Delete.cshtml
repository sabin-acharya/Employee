@model Users
<form asp-controller="Employee" asp-action="Delete" method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="=text-primary">Delete List</h2>
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>

        </div>
        <div class="mb-3">
            <label asp-for="Age"></label>
            <input asp-for="Age" class="form-control" />
            <span asp-validation-for="Age" class="text-danger"></span>

        </div>
        <div>
            <button type="submit"style="background-color: slategrey; color: #FFFFFF;">
                Delete
                </button>
            <a asp-controller="Employee" asp-action="Index" class="btn btn-secondary" style="width:150px"> Back To List</a>
        </div>

      </div>

</form>